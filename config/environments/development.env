# Service Configuration
ENVIRONMENT=development
DEBUG=true

# PDF Processor Service
PDF_PROCESSOR_HOST=localhost
PDF_PROCESSOR_PORT=8003
PDF_PROCESSOR_URL=http://localhost:8003

# OCR Service
OCR_HOST=localhost
OCR_PORT=8004
OCR_URL=http://localhost:8004

# Summarizer Service
SUMMARIZER_HOST=localhost
SUMMARIZER_PORT=8005
SUMMARIZER_URL=http://localhost:8005

# Processing Settings
MAX_FILE_SIZE=100
CHUNK_SIZE=1000
BATCH_SIZE=10
PROCESSING_TIMEOUT=300
RETRY_ATTEMPTS=3

# Security
API_KEY_REQUIRED=false
ALLOWED_ORIGINS=*
SSL_VERIFY=false

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed