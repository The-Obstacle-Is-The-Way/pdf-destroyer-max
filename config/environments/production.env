# Service Configuration
ENVIRONMENT=production
DEBUG=false

# PDF Processor Service
PDF_PROCESSOR_HOST=pdf-processor
PDF_PROCESSOR_PORT=8003
PDF_PROCESSOR_URL=http://pdf-processor:8003

# OCR Service
OCR_HOST=ocr-tesseract
OCR_PORT=8004
OCR_URL=http://ocr-tesseract:8004

# Summarizer Service
SUMMARIZER_HOST=transformers-summarizer
SUMMARIZER_PORT=8005
SUMMARIZER_URL=http://transformers-summarizer:8005

# Processing Settings
MAX_FILE_SIZE=100
CHUNK_SIZE=1000
BATCH_SIZE=20
PROCESSING_TIMEOUT=600
RETRY_ATTEMPTS=3

# Security
API_KEY_REQUIRED=true
ALLOWED_ORIGINS=https://your-domain.com
SSL_VERIFY=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json