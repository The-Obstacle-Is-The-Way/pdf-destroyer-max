# Environment configuration
ENVIRONMENT=production

# Enable or disable LayoutLMv3 model usage for OCR enhancement
USE_LAYOUTLMV3=true

# GPU usage setting
USE_GPU=true

# OCR service endpoint URL for production
OCR_TESSERACT_SERVICE_URL=http://ocr-tesseract:8002/extract_text

# Logging configuration for production
LOG_LEVEL=INFO
LOG_PATH=./logs/production.log

# Transformer Model
TRANSFORMERS_MODEL=microsoft/layoutlmv3-base

# Optional: Error notification settings (if needed)
ERROR_NOTIFICATION_URL=http://notification-service:8000/notify
